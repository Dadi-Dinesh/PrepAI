generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(cuid())
  email      String      @unique
  password   String
  name       String?
  role       String?
  experience String?
  location   String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  interviews Interview[]
}

model Interview {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  role        String
  date        DateTime @default(now())
  summary     String
  suggestions String[]
  notes       String?
}

model Feedback {
  id        String   @id @default(cuid())
  message   String
  userId    String?
  createdAt DateTime @default(now())
}